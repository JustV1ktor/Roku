<component name="SlideShowView" extends="Group">
    <script type="text/brightscript" uri="SlideShowView.brs"/>
    <script type="text/brightscript" uri="pkg:/components/RawData/RawData.brs"/>
    <children>
        <LayoutGroup
            layoutDirection = "vert"
            horizAlignment = "center"
            vertAlignment = "center"
            itemSpacings = "[10]"
            translation = "[960, 540]">
            <Timer
                id = "timer"
                repeat = "true"/>
            <LayoutGroup
                id = "elementTop"
                layoutDirection = "horiz">
                <Poster
                id = "posterPhoto"/>
                <LayoutGroup
                    id = "buttonsGroup">
                    <Button
                        id = "buttonPrevious"
                        text = "Previous"
                        focusedTextColor = "0X000000FF"/>
                    <Button
                        id = "buttonNext"
                        text = "Next"
                        focusedTextColor = "0X000000FF"/>
                    <Button
                        id = "buttonSlideShow"
                        text = "Slide Show"
                        focusedTextColor = "0X000000FF"/>
                </LayoutGroup>
            </LayoutGroup>

            <LayoutGroup
                id = "elementBottom"
                layoutDirection = "horiz"
                itemSpacings = "[10]">
                <Rectangle
                    id = "RectangleOne"
                    color = "0x1FD4AA"/>
                <Rectangle
                    id = "RectangleTwo"
                    color = "0x880000FF"/>
                <Rectangle
                    id = "RectangleThree"
                    color = "0x888B00FF"/>
                <Rectangle
                    id = "RectangleFour"
                    color = "0xDD821D"/>
            </LayoutGroup>
        </LayoutGroup>
    </children>
</component>